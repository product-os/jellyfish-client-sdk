{
  "extends": "@balena/lint/tsconfig.json",
  "compilerOptions": {
    "target": "es2016",
    "noImplicitAny": false,
    "allowJs": false,
    "outDir": "build",
    "esModuleInterop": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": ["lib/**/*.ts", "test/**/*.ts"]
}
